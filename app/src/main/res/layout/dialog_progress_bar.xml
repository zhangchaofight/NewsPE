<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp">

    <ProgressBar
        android:id="@+id/dialog_progress_pb"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/dialog_progress_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="@string/loading_tip"
        app:layout_constraintBottom_toBottomOf="@id/dialog_progress_pb"
        app:layout_constraintLeft_toRightOf="@id/dialog_progress_pb"
        app:layout_constraintTop_toTopOf="@+id/dialog_progress_pb" />

</androidx.constraintlayout.widget.ConstraintLayout>